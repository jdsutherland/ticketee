<% title(@project.name, "Projects") %>

<header>
  <h1><%= @project.name %></h1>

  <ul class="actions">
    <li><%= link_to "Edit Project", edit_project_path(@project), class: "edit" %></li>
    <li><%= link_to "Delete Project", @project, {
      method: :delete,
      data: { comfirm: "Are you sure you want to delete this project?" },
      class: "delete"
    } %></li>
  </ul>
</header>

<header>
  <h2>Tickets</h2>

  <ul class="actions">
    <li><%= link_to "New Ticket", new_project_ticket_path(@project), class: "new" %></li>
  </ul>
</header>
